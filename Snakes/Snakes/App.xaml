<Application x:Class="Snakes.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:Snakes"
             StartupUri="MainWindow.xaml">
    <Application.Resources>
        <SolidColorBrush x:Key="BackgroundColour">#211E2B</SolidColorBrush>
        <SolidColorBrush x:Key="GridBackgroundColour">#312C40</SolidColorBrush>
        <SolidColorBrush x:Key="GridLineColour">#605A76</SolidColorBrush>
        <SolidColorBrush x:Key="TextColour">#EBEBEB</SolidColorBrush>
        <SolidColorBrush x:Key="OverlayColour">#7F0000</SolidColorBrush>
        <FontFamily x:Key="MainFont">Assets/#DroidSans Mono</FontFamily>
    </Application.Resources>
</Application>
